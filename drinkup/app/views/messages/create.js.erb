//This script is called every time a message is created(sent)
<% publish_to @path do %>

    var id = "<%= @chat.id %>";
    var chatbox = $("#chatbox_" + id);
    //renders _message.html.erb
    chatbox.append("<%= j render( partial: @message ) %>");
    chatbox.scrollTop(chatbox[0].scrollHeight);

<% end %>